<?xml version="1.0" encoding="UTF-8"?>
<project>
  <parent>
    <artifactId>project</artifactId>
    <groupId>org.mortbay.jetty</groupId>
    <version>6.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.mortbay.jetty</groupId>
  <artifactId>project-site</artifactId>
  <packaging>pom</packaging>
  <name>Jetty Site</name>
  <version>6.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>clean</id>
            <phase>clean</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <delete failonerror="false" includeemptydirs="true">
                 <fileset dir="src/site/apt/maven-plugin" includes="**/**"/> 
                </delete>
              </tasks>
            </configuration>
          </execution>
          <execution>
            <id>copyfile</id>
            <phase>validate</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <copy file="${basedir}/../README.txt" todir="${basedir}/target/site/" failonerror="false"></copy>
                <copy file="${basedir}/../VERSION.txt" todir="${basedir}/target/site/" failonerror="false"></copy>
                <copy file="${basedir}/../legal/LICENSE.TXT" todir="${basedir}/target/site/" failonerror="false"></copy>
                <copy todir="${basedir}/target/site/apidocs" failonerror="false" overwrite="true">
                  <fileset dir="${basedir}/../target/site/apidocs">
                    <include name="**/**"/>
                  </fileset>
                </copy>
                <copy todir="${basedir}/target/site/xref" failonerror="false" overwrite="true">
                  <fileset dir="${basedir}/../target/site/xref">
                    <include name="**/**"/>
                  </fileset>
                </copy>
                <copy todir="${basedir}/target/site/xref-test" failonerror="false" overwrite="true">
                  <fileset dir="${basedir}/../target/site/xref-test">
                    <include name="**/**"/>
                  </fileset>
                </copy>
                <copy todir="${basedir}/src/site/apt/maven-plugin" failonerror="false" overwrite="true">
                  <fileset dir="${basedir}/../modules/maven-plugin/src/site/apt">
                    <include name="**/**"/>
                  </fileset>
                </copy>
                <copy todir="${basedir}/target/generated-site/xdoc/maven-plugin" failonerror="false" overwrite="true">
                  <fileset dir="${basedir}/../modules/maven-plugin/target/generated-site/xdoc">
                    <include name="index.xml"/>
                    <include name="run-mojo.xml"/>
                    <include name="run-war-mojo.xml"/>
                    <include name="run-exploded-mojo.xml"/>
                  </fileset>
                </copy>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
       <groupId>org.apache.maven.plugins</groupId>
       <artifactId>maven-site-plugin</artifactId>
       <configuration>
         <!--templateDirectory>file:///${basedir}/src/site/resources/template/</templateDirectory>
         <template>org/apache/maven/plugins/site/maven-site.vm</template-->
         <!-- templateFile>${basedir}/src/site/resources/template/org/apache/maven/plugins/site/maven-site.vm</templateFile -->
       </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <reportSets>
          <reportSet>
            <reports>
              <report>project-team</report>
              <report>mailing-list</report>
              <report>issue-tracking</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>
</project>
