<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.mortbay.jetty</groupId>
    <artifactId>jetty-project</artifactId>
    <version>7.0-SNAPSHOT</version>
  </parent>
  <artifactId>jetty-assembly</artifactId>
  <name>Jetty :: Distribution Assemblies</name>
  <packaging>pom</packaging>
  <build>
    <finalName>jetty-${project.version}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
        <version>1.0</version>        
        <executions>
        <!--
        * This execution prepares a checkout for the distribution site component and the
        * distribution source artifact
        -->
          <execution>
            <id>src-and-site</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>bootstrap</goal>
            </goals>
            <configuration>
              <connectionType>connection</connectionType>
              <connectionUrl>${jetty.scm}</connectionUrl>  
              <skipCheckoutIfExists>true</skipCheckoutIfExists>
              <checkoutDirectory>${basedir}/target/dist-src</checkoutDirectory>
              <goals>-Pgenerate-site generate-resources jxr:jxr javadoc:javadoc</goals>
            </configuration>
          </execution>
        <!--
        * This execution prepares a checkout for the actual distribution artifact for general
        * distribution
        -->
          <execution>
            <id>distro</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>bootstrap</goal>
            </goals>
            <configuration>
              <connectionType>connection</connectionType>
              <connectionUrl>${jetty.scm}</connectionUrl>  
              <skipCheckoutIfExists>true</skipCheckoutIfExists>
              <checkoutDirectory>${basedir}/target/dist</checkoutDirectory>
              <goals>-Pall-modules install</goals>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
           <descriptors>
            <descriptor>src/main/assembly/jetty.xml</descriptor>
            <descriptor>src/main/assembly/jetty-src.xml</descriptor>
            <descriptor>src/main/assembly/site-component.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!--
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
           <execution>
             <id>install</id>
             <goals>
               <goal>attach-artifact</goal>               
             </goals>
             <configuration>
               <artifacts>
               	 <artifact>
               	   <file>target/${final_name}-site-component.jar</file>
